             xmlns:local="clr-namespace:MyFirstWpfApp"
             xmlns:viewModels="clr-namespace:MyFirstWpfApp.MVVM.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
